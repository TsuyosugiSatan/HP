@inherits LayoutComponentBase

<Layout>
    <Header Class="site-layout-sub-header-background" Style="padding: 10; color:white">test</Header>
    <Layout>
        <Sider Breakpoint="@BreakpointType.Lg"
               CollapsedWidth="0">
            <div class="logo" />
            <Menu Theme="MenuTheme.Dark" Mode="MenuMode.Inline" DefaultSelectedKeys=@(new[]{"4"})>
                <MenuItem Key="1">
                    <Icon Type="user" Theme="outline" />
                    <span class="nav-text">nav 1</span>
                </MenuItem>
                <MenuItem Key="2">
                    <Icon Type="video-camera" Theme="outline" />
                    <span class="nav-text">nav 2</span>
                </MenuItem>
                <MenuItem Key="3">
                    <Icon Type="upload" Theme="outline" />
                    <span class="nav-text">nav 3</span>
                </MenuItem>
                <MenuItem Key="4">
                    <Icon Type="user" Theme="outline" />
                    <span class="nav-text">nav 4</span>
                </MenuItem>
            </Menu>
        </Sider>
        <Content Style=" margin: 24px 16px 0;">
            <div class="site-layout-background" style="padding: 24px; min-height: 360px">
                @Body
            </div>
        </Content>
    </Layout>
    <Footer Style="text-align: center;">Ant Design ©2018 Created by Ant UED</Footer>
</Layout>